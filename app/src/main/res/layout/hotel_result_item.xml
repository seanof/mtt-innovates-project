<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="@color/tag_key_background"
              android:padding="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/result_item_image"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_width="@dimen/stream_result_image_size"
        android:layout_height="@dimen/stream_result_image_size"
        android:layout_gravity="left"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/result_item_name"
        style="@style/baseFontFamily"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>