<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_presenter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context="com.mttnow.fluttr.SearchCriteriaFragment"
    tools:showIn="@layout/activity_presenter">

    <LinearLayout
        android:id="@+id/search_text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/find_me_a_trip_to"
            style="@style/searchHeaderText" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/destination"
                android:paddingRight="5dp"
                android:inputType="textAutoComplete"
                tools:text="PARIS"
                style="@style/searchHeaderInputText" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/travel_date_text"
                style="@style/searchHeaderText"
                android:text="@string/from_the" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/travel_date_depart"
                android:visibility="invisible"
                style="@style/searchHeaderInputText"
                tools:text="14 DEC 2016" />

            <TextView
                android:id="@+id/travel_date_text_return"
                style="@style/searchHeaderText"
                android:layout_weight="0.1"
                android:visibility="invisible"
                android:text="@string/to"/>

        </LinearLayout>

        <EditText
            android:id="@+id/travel_date_return"
            android:visibility="invisible"
            android:paddingLeft="10dp"
            style="@style/searchHeaderInputText"
            tools:text="20 DEC 2016" />

        <LinearLayout
            android:id="@+id/num_travelers_parent"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/searchHeaderText"
                android:text="@string/for_space" />

            <EditText
                android:id="@+id/num_travelers"
                android:inputType="number"
                style="@style/searchHeaderInputText"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                tools:text="2" />

            <TextView
                style="@style/searchHeaderText"
                android:text="@string/people" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@+id/search_text_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/white_translucent" />

    <RelativeLayout
        android:layout_below="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/suggestion_header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:text="@string/suggestions"
            android:layout_marginBottom="5dp"
            style="?android:attr/textAppearanceMedium" />

        <ListView
            android:layout_below="@+id/suggestion_header"
            android:id="@+id/suggestion_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1dp" />

    </RelativeLayout>

</RelativeLayout>
